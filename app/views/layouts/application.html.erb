<!DOCTYPE html>
<html>
<head>
  <title>スナップチャット掲示板 | <%= yield(:title) %></title>
  <%= render :partial => "layouts/meta_tags" %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="navbar navbar-fixed-bottom header_color header_height">
    <div class="container">
    <div class="row">
      <div class="col-xs-3 link_box">
        <%= link_to "新着一覧", root_path %>
      </div>
      <div class="col-xs-3 link_box">
        <%= link_to "新規投稿", new_post_path %>
      </div>
      <div class="col-xs-3 link_box">
        <%= link_to "使い方", help_path %>
      </div>
      <div class="col-xs-3 link_box">
        <%= link_to "検索", search_path %>
      </div>
      </div>
    </div>
  </header>
  <div class="container logo">
      <%= link_to "SnapChat掲示板", root_path, id: "logo", class: "navbar navbar-fixed-top navbar-inverse logo_background_color navbar_static" %>
    </div>
  <div class="container">
    <%= yield %>
    <div class="container footer-link">
        <ul class="list-inline center">
          <% ["男性","女性"].each do |sex| %>
            <li><%= link_to sex, index_by_sex_path(sex) %></li>
          <% end %>
        </ul>
        <ul class="list-inline center">
          <% ["10代","20代","30代","40代","50代以上"].each do |age| %>
            <li><%= link_to age, index_by_age_path(age) %></li>
          <% end %>
        </ul>
        <ul class="list-inline center footer_prefecture">
          <% ['北海道', '青森県', '岩手県', '宮城県', '秋田県', 
    '山形県', '福島県', '茨城県', '栃木県', '群馬県', 
    '埼玉県', '千葉県', '東京都', '神奈川県', '新潟県', 
    '富山県', '石川県', '福井県', '山梨県', '長野県', 
    '岐阜県', '静岡県', '愛知県', '三重県', '滋賀県', 
    '京都府', '大阪府', '兵庫県', '奈良県', '和歌山県', 
    '鳥取県', '島根県', '岡山県', '広島県', '山口県', 
    '徳島県', '香川県', '愛媛県', '高知県', '福岡県', 
    '佐賀県', '長崎県', '熊本県', '大分県', '宮崎県', 
    '鹿児島県', '沖縄県'].each do |prefecture| %>
            <li><%= link_to prefecture, index_by_prefecture_path(prefecture) %></li>
          <% end %>
        </ul>
        <ul class="list-inline center">
          <li><%= link_to "ホームへ戻る", root_path %></li>
        </ul>
     </div>
      <footer class="footer">
      <nav>
        <ul>
          <li><%= link_to "使い方", help_path %></li>
          <li><%= link_to "運営者", company_path %></li>
          <li><%= link_to "利用規約", kiyaku_path %></li>
        </ul>
      </nav>
    </footer>
  </div>
</body>
</html>
